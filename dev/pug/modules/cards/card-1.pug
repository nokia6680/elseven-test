<section class="cards card-2">
    <div class="cards__breadcrumbs-wrapper">
        <ul class="cards__breadcrumbs cards-container">
            +breadcrumb('catalog.html', 'Каталог')
            +breadcrumb('#', 'Хлебные формы')
            +breadcrumb('#', 'Тостовые')
            +breadcrumb('#', 'Тостерная №1')
        </ul>
    </div>
    <div class="card-2__content cards-container">
        <img class="cards__img cards__img--new" src="images/content/card-2-example.jpg" width="373" height="240" >
        <div class="card-2__filters">
            <h2>Тостерная №1</h2>
            <span class="card-2__tags">SKU Л011</span>
            <span class="card-2__availability card-2__availability--miss">Нет в наличии</span>
            <div class="card-2__filter">
                <div class="card-2__filter-input card-2__filter-input--forms-in-section">
                    <span class="card-2__filter-tag">Сборка форм в секции</span>
                    <ul class="selectric">
                        <li data-index="10mm">1</li>
                        <li data-index="20mm">3</li>
                        <li data-index="30mm">3 с ручками</li>
                        <li data-index="10mm">4</li>
                        <li data-index="20mm">4 с ручками</li>
                        <li data-index="30mm">5</li>
                        <li data-index="10mm">5 с ручками</li>
                        <li data-index="20mm">6 с ручками</li>
                    </ul>
                </div>
                <div class="card-2__filter-input card-2__filter-input--form-type">
                    <span class="card-2__filter-tag">Тип формы </span>
                    <ul class="selectric">
                        <li data-index="4-sides">Тостерная №7 ( 280 х 80 х 75)</li>
                        <li data-index="3-sides">Тостерная №8 (210 х 80 х 75)</li>
                        <li data-index="2-sides">Тостерная №9 (198 х 113 х 93)</li>
                        <li data-index="4-sides">Рулетница (307 х 107 х 53)</li>
                        <li data-index="3-sides">Волнистая (320 х 125 х 60)</li>
                    </ul>
                </div>
                <div class="card-2__filter-input card-2__filter-input--quantity">
                    <span class="card-2__filter-tag">Количество</span>
                    <div class="card-2__input-quantity">
                    <span class="minus"></span>
                    <span class="plus">+</span>
                    <input type="number" id="quantity" name="quantity" min="1" value="1">
                    </div>
                </div>
                <span class="card-2__price">1211 ₽</span>
                <a class="card-2__price">Добавить в корзину</a>
            </div>
        </div>
    </div>
</section>
